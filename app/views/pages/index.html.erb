<div class="container page-container">
  <div class="row">
    <div class="col-lg-12">
      <h3>Enter a URL</h3>
      <p>EDMTunes and Dancing Astronaut URLs are supported.</p>

      <div class="row">
        <div class="col-sm-4">
          <%=form_for scrape_path, url: scrape_path, method: :post do |f| %>

            <div class="form-group">
              <label class="control-label" for="scrape-url">URL:</label>
              <input type="text" name="url" id="scrape-url" class="form-control" />
            </div>
            <div class="form-group">
              <button class="btn btn-primary">Save to Vault</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>