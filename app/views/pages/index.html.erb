<div class="container top-padding bottom-padding">
  <div class="row">
    <div class="col-lg-12">
      <h3>Enter a URL</h3>
      <p>EDMTunes and Dancing Astronaut URLs are supported.</p>

          <%=form_for Track.new, url: {controller: "track", action: "create"}, html: {class: 'save-form'} do |f| %>

          <div class="form-row">
            <label class="block">Blog post URL:</label>
            <input type="text" name="url" id="scrape-url" required autocomplete="off" autocorrect="off" class="input-full-width" placeholder="http://">
          </div>

          <div class="form-group">
            <button class="btn btn-primary">Save to Vault</button>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>